                try:
                    logger.info("ðŸ¤– Falling back to OpenAI service")
                    response = await self.openai_service.ai_ainvoke(prompt)
                    summary = self._extract_summary_from_response(response)
                    model_used = "openai_gpt"
                    logger.info(f"âœ… OpenAI summarization successful: {len(summary)} characters")
                except Exception as e:
                    logger.warning(f"OpenAI service failed: {str(e)}")
            
            if not summary:
                raise ValueError("KhÃ´ng cÃ³ AI service nÃ o kháº£ dá»¥ng Ä‘á»ƒ tÃ³m táº¯t")
            
            end_time = time.time()
            processing_time = end_time - start_time
            
            # Prepare response
            response = {
                "summary": summary,
                "summary_type": summary_type,
                "language": language,
                "original_length": len(text),
                "summary_length": len(summary),
