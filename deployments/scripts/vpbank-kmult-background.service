[Unit]
Description=VPBank K-MULT Agent Studio Background Service
After=docker.service
Requires=docker.service

[Service]
Type=forking
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/multi-agent-hackathon
ExecStart=/home/ubuntu/multi-agent-hackathon/deployment/scripts/manage.sh start
ExecStop=/home/ubuntu/multi-agent-hackathon/deployment/scripts/manage.sh stop
ExecReload=/home/ubuntu/multi-agent-hackathon/deployment/scripts/manage.sh restart
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
